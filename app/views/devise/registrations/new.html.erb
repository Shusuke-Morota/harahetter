<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
          <%= f.label :お名前 %>
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "お名前" %>
      </div>

      <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "パスワード" %>
      </div>

      <div class="form-group">
          <%= f.label :確認用パスワード %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "確認用パスワード" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>

      <p><%= render "devise/shared/links" %></p>
    </div>
  </div>
</div>
