<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="form-wrapper">
        <h2>ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "パスワード" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持しておく" %>
        </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログインする", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>

        <p><%= render "devise/shared/links" %></p>
      </div>
    </div>
  </div>
</div>