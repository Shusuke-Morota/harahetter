<!DOCTYPE html>
<html>
<head>
  <title>Harahetter</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <script src="https://kit.fontawesome.com/3a4e43d077.js" crossorigin="anonymous"></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body id="<%= controller.controller_name %>-<%= controller.action_name %>">
  <% if flash[:notice] %>
    <div class="alert alert-primary"><strong><%= notice %></strong></div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger"><strong><%= alert %></strong></div>
    <% end %>
  <%= yield %>
</body>
</html>
