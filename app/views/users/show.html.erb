<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<div class="row">
	<div class="col-12">
		<div class="users-show-bg-image">
			<%= attachment_image_tag @user, :profile_bg_image, :fill, 260, 280, fallback: "users-show-bg-image.png", class:"img-fluid" %>
		</div>
	</div>
</div>

<div class="container mt-5">
	<div class="row">
		<div class="col-3">
			<div class="card">
				<div class="card-body">
					<%= attachment_image_tag @user, :profile_image, :fill, 250, 250, fallback: "no-image.png", class:"img-fluid" %>
				</div>
				<div class="content">
					<div class="card-body">
						<h5 class="card-title">
							【 <%= @user.name %> 】
						</h5>

						<% if @user.id == current_user.id %>
						  <p class="card-content">
						  	<small class="text-muted">
						  		<%= @user.email %>
						  	</small>
						  </p>
						<% end %>

						<p class="card-content">
							<%= @user.profile %>
						</p>

						<div class="show-btn">
							<% if @user.id == current_user.id %>
							  <%=  link_to "ユーザー情報を編集する", edit_user_path, class: "btn btn-primary" %>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>