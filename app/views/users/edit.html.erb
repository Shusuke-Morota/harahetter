<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>



<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2 class="edit-users-title">ユーザー編集</h2>
			<%= form_with model: @user do |form| %>

			<div class="form-group">
				<%= form.label :プロフィール画像 %>
				<%= form.attachment_field :profile_image, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= form.label :お名前 %>
				<%= form.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :メールアドレス %>
				<%= form.email_field :email, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :プロフィール %>
				<%= form.text_area :profile, class: "form-control" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
