<% if @user.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2 class="edit-users-title">ユーザー編集</h2>
			<%= form_with model: @user, local: true do |form| %>

			<div class="form-group">
				<%= form.label :プロフィール背景画像 %>
				<%= form.attachment_field :profile_bg_image, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :プロフィール画像 %>
				<%= form.attachment_field :profile_image, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :お名前 %>
				<%= form.text_field :name, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :メールアドレス %>
				<%= form.email_field :email, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :プロフィール %>
				<%= form.text_area :profile, class: "form-control" %>
			</div>

			<div class="actions">
				<%= form.submit "更新する", class: "btn btn-success btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
