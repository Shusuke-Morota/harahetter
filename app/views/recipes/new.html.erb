
<div class="container mt-5">
	<div class="row">
		<div class="col-6 mx-auto">
			<h2 class="recipes-new-title">新規ハラヘリメニュー投稿</h2>

			<%= form_with model: @recipe do |form| %>
			<div class="form-group">
				<%= form.label :メニュー画像 %>
				<%= form.attachment_field :recipe_images_images, class: "form-control", multiple: true %>
			</div>

			<div class="form-group">
				<%= form.label :メニュー名 %>
				<%= form.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :レシピ %>
				<%= form.text_area :body, size: "20x5", class: "form-control" %>
			</div>

			<div class="actions">
				<%= form.submit "投稿する", class: "btn btn-success btn-block" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
