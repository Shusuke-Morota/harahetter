

<p class="mb-3">レビューを書く</p>


<div class="rating-box mt-3">
	<%= form_with model: review, url: recipe_reviews_path(recipe), local: true do |f| %>
	  <div class="main-rating">
		  <div class="ratings mb-3">
			  <span class="fa fa-star-o" id="star"></span>
			  <span class="fa fa-star-o" id="star"></span>
			  <span class="fa fa-star-o" id="star"></span>
			  <span class="fa fa-star-o" id="star"></span>
			  <span class="fa fa-star-o" id="star"></span>
		  </div>
		  <div class="ml-3 rating-value-display">
		  	<span id="rating-value-display">0</span>/5
		  </div>
	  </div>
	  <%= f.hidden_field :recipe_id, value: recipe.id %>
	  <%= f.hidden_field :score, id: "rating-value" %>
	  <%= f.text_area :content, class: "textarea" %>
	  <%= f.submit "保存", class: "btn btn-success" %>
	  <%= link_to "他のレビューを見る", recipe_reviews_path(recipe), class: "btn btn-success" %>
	<% end %>
</div>